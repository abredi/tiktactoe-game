  "version": "0.2.0",
  "configurations": [
  {
    "name": "Debug Local File",
    "type": "Ruby",
    "request": "launch",
    "program": "${workspaceRoot}/bin/main.rb"
  },
    {
      "name": "RSpec - active spec file only",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/rspec/score_spec.rb",
      "args": [
        "-I",
        "${workspaceRoot}",
        "${file}"
      ]
    },
    {
      "name": "RSpec - all",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/spec/score_spec.rb",
      "args": [
        "-I",
        "${workspaceRoot}"
      ]
    }
  ]
}